---
import { render } from 'astro:content';
import Layout from '@/layouts/base/base.astro';
import { PostHeader } from '@/components/Posts';
import { Posts } from '@/utils/posts';
import { CodeBlockEnhancer } from '@/components/CodeBlock';

export async function getStaticPaths() {

  return Posts.map(post => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;

const { Content } = await render(post);
---

<Layout pageTitle={post.title} pageDescription={post.data.summary}>
  <article>
    <article-header>
      <PostHeader post={post} />
      <hr />
    </article-header>
    <article-body>
      <Content />
    </article-body>
  </article>
  <CodeBlockEnhancer client:only="react" />
</Layout>
